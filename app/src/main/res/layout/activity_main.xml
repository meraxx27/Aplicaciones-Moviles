<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Noregistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp"
        android:text="No tienes cuenta?, Registrate aqui c:"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="662dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="157dp"
        android:layout_height="148dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_action_name" />

    <EditText
        android:id="@+id/emailusuario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="358dp" />

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailusuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/icon_password"
        android:ems="10"
        android:hint=" ContraseÃ±a"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/emailusuario"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp" />

    <Button
        android:id="@+id/botoningreso"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Iniciar Sesion"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/contrasena"
        android:background="@drawable/boton_modificacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasena"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Noregistro"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/keepsesion"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantener iniciada la sesion"
        android:layout_marginStart="95dp"
        android:textStyle="bold"
        android:layout_marginTop="570dp"
        />


</RelativeLayout>